{
  "ReverseProxy": {
    "Routes": {
      "staffRoute": {
        "ClusterId": "staffCluster",
        "Match": {
          "Path": "/staff/{**catch-all}"
        },
        "AuthorizationPolicy": "Default",
        "Transforms": [
          { "PathRemovePrefix": "/staff" }
        ]
      },
      "studentRoute": {
        "ClusterId": "studentCluster",
        "Match": {
          "Path": "/student/{**catch-all}"
        },
        "AuthorizationPolicy": "Default",
        "Transforms": [
          { "PathRemovePrefix": "/student" }
        ]
      },
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      }
    },
    "Clusters": {
      "staffCluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:44381/"
          }
        }
      },
      "studentCluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:44358/"
          }
        }
      },
      "authCluster": {
        "Destinations": {
          "d1": {
            "Address": "https://localhost:44318/"
          }
        }
      }
    }
  },
  "JwtSettings": {
    "Key": "THIS_IS_SUPER_SECRET_KEY_CHANGE_IN_PRODUCTION",
    "Issuer": "AuthMicroservice",
    "Audience": "AllMicroservices",
    "ExpiresInMinutes": 60
  }
}